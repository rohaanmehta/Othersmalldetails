    /* bootstrap csss   */
    button:focus {
        outline: none !important;
        box-shadow: none !important;
    }
    input {
        box-shadow: none !important;
        outline: none !important;
    }
    input:focus {
        border: 1px solid red !important;
    }
    select {
        box-shadow: none !important;
        outline: none !important;
    }
    select:focus {
        border: 1px solid red !important;
    }
