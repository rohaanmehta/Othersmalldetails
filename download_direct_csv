<?php 
 $db = \Config\Database::connect();
 $csv = $db->table('csv')->get()->getResultArray();
 $csv2 = '';
    foreach($csv as $row){
        $csv2 = $csv2.'
'.$row['ASIN'].','.$row['date'];
    }
    
    header("Content-type: text/x-csv");
    header("Content-Disposition: attachment; filename=ALTER_".Date('d-M').'.csv');
    echo $csv2;
    $db->table('csv')->truncate('csv');exit;
 ?>
